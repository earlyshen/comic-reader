{
  "author": {
    "name": "Yu-Jen Lin",
    "url": "https://github.com/yjlintw/comic-reader"
  },
  "name": "comic-reader",
  "version": "0.1.5",
  "description": "A simple comic reader app",
  "main": "main.js",
  "devDependencies": {
    "concurrently": "^3.4.0",
    "devtron": "^1.4.0",
    "livereloadx": "^0.3.9",
    "node-sass": "^4.5.2",
    "nodemon": "^1.11.0",
    "electron": "^1.6.2",
    "electron-debug": "^1.1.0",
    "electron-builder": "^17.0.1"
  },
  "scripts": {
    "start": "electron .",
    "reload": "livereloadx",
    "build-css": "node-sass --include-path scss assets/scss/main.scss assets/css/main.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "dev": "concurrently --kill-others \"npm run reload\" \"npm run start\" \"npm run watch-css\"",
    "pack": "build --dir",
    "dist": "build "
  },
  "dependencies": {
    "about-window": "^1.6.1",
    "async": "^2.3.0",
    "electron-settings": "^3.0.14",
    "node-notifier": "^5.1.2",
    "node-schedule": "^1.2.1",
    "request": "^2.81.0"
  },
  "build": {
    "appId": "com.comicreader.comicreader",
    "mac": {
      "category": "public.app-category.entertainment",
      "target": ["dmg"],
      "icon": "assets/icons/icon.icns"
    }
  }
}
